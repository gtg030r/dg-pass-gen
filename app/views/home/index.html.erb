<%= form_tag("/passes", :method=>"post", remote: true) do %>

	<%= label_tag :description, 'Description:' %>
	<%= text_field_tag(:description) %>
	
	<%= label_tag :logo, 'Logo:' %>
	<%= text_field_tag(:logoText) %>


	<%= label_tag :message, 'Barcode:' %>
	<%= text_field_tag(:message) %>

	<%= label_tag :organizationName, 'Organization Name:' %>
	<%= text_field_tag(:organizationName) %>
	
	<%= label_tag :offer, 'Offer:' %>
	<%= text_field_tag(:offer) %>

	<%= label_tag :value, 'Value:' %>
	<%= text_field_tag(:value) %>	

	<%= label_tag :fR, 'Foreground Color (RGB)' %>
	<%= text_field_tag(:fR) %>
	<%= text_field_tag(:fG) %>
	<%= text_field_tag(:fB) %>  

	<%= label_tag :bR, 'Background Color (RGB)' %>
	<%= text_field_tag(:bR) %>
	<%= text_field_tag(:bG) %>
	<%= text_field_tag(:bB) %>  

	<%= submit_tag("Generate Pass", :class=>"btn") %>
<% end %>
