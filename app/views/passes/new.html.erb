<%= form_for @pass, :url=> {:action => "create"} do |f| %>

	<%= f.label :description, 'Description:' %>
	<%= f.text_field(:description) %>
	
	<%= f.label :logo, 'Logo Label:' %>
	<%= f.text_field(:logoText) %>
	
	<p>Logos uploaded need to be 58x58 pixels</p>
    <div class="field">
        <%= f.label :logo2x, 'Upload a logo' %><br />
        <%= f.file_field :logo2x %>
	</div>

	<%= f.label :message, 'Barcode:' %>
	<%= f.text_field(:message) %>

	<%= f.label :organizationName, 'Organization Name:' %>
	<%= f.text_field(:organizationName) %>
	
	<%= f.label :label, 'Offer:' %>
	<%= f.text_field(:label) %>	

	<%= f.label :value, 'Offer Value:' %>
	<%= f.text_field(:value) %>	
	
	<%= f.label :foregroundColor, 'Text Color: ' %>
	<%= f.text_field(:foregroundColor, :type=>"color") %>

	<%= f.label :backgroundColor, 'Background Color: ' %>
	<%= f.text_field(:backgroundColor, :type=>"color")%>

	<div>
	<%= f.label :expdate, 'Enter an expiration date for your coupon:' %>
	<%= f.text_field(:expdate, :id => "expdate") %>
	</div>

	<div>
	<%= submit_tag("Generate Pass", :class=>"btn") %>
	</div>
<% end %>

<script>
$(function() {
  $('#expdate').datepicker({dateFormat: "yy-mm-dd"});	
});
</script>
